<h1>Listing caskets</h1>

<table>
  <thead>
    <tr>
      <th>Template</th>
      <th>Text1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @caskets.each do |casket| %>
      <tr>
        <td><%= casket.template %></td>
        <td><%= casket.text1 %></td>
        <td><%= link_to 'Show', casket %></td>
        <td><%= link_to 'Edit', edit_casket_path(casket) %></td>
        <td><%= link_to 'Destroy', casket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Casket', new_casket_path %>
